.header-container.container
  .header-row
    .col-xs-12.col-sm-8.col-lg-3.col-md-6.logo
      h1
        img.logo(src='assets/images/logo.svg', alt="#grubup")
    .col-xs-9.search
      input.search-field(type='text', placeholder='zip code', ng-model-options="{ debounce: 500 }", ng-model='zip')
      nav
        ul
          li  
            a location
          li
            a menu

#hero-map
  location-popout(location='selectedLocation', class="{{popoutClass}}")
  map.map(center="[{{lat}}, {{long}}]", zoom="13", scrollwheel="false", draggable="{{draggable}}", class="{{mapClass}}")
    marker(ng-repeat="marker in markers", position="{{marker.position}}", on-click="showLocation(marker, $index)")

.body-container(ng-show='locations.closest.length != 0')
  .container
    section.near-locations
      .row(ng-repeat='close in locations.closest')
        .locations.col-lg-12
          .col-lg-3.col-md-3
            h2 {{close.name}}
          .col-lg-7.col-md-6
            div {{close.address}} â€¢ Pittsburgh, PA {{close.zip}}
            span Distance: {{close.distance}} miles
          .col-lg-2.col-md-3
            button Get Directions

section.text-message
  .container-fluid
    .row
      .col-lg-8.col-lg-offset-2
        img.phone-icon(src='assets/images/phone-icon.svg', alt="Phone icon")
        h3 Text Menu to "78945" to receive today's menu for your location!
footer
  .container
    .row
      .col-lg-12
        img.cp-logo(src='assets/images/citiparks-logo.svg', alt="Citiparks Logo")
        p
          span Main Office:
          br
          span 412.422.6401
        p
          span 5344 Second Ave.
          br
          span Pittsburgh, PA 15207
